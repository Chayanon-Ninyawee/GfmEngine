{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure CMake (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "@CMAKE_SOURCE_DIR@",
                "-B", "@CMAKE_BINARY_DIR@",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Configure CMake (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", "@CMAKE_SOURCE_DIR@",
                "-B", "@CMAKE_BINARY_DIR@",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "Build TestGfmEngine (Debug)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "@PROJECT_BINARY_DIR@",
                "--config", "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": ["Configure CMake (Debug)"]
        },
        {
            "label": "Build TestGfmEngine (Release)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "@PROJECT_BINARY_DIR@",
                "--config", "Release"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": ["Configure CMake (Release)"]
        }
    ]
}
